        <ComboBox x:Name="NextComboBox" FontFamily="{StaticResource Purista}" FontWeight="Normal" FontSize="18" Margin="220,492,744,0" Foreground="#FFF1F1F1" BorderBrush="{x:Null}" SelectedIndex="32" SelectionChanged="NextComboBox_SelectionChanged" Height="44" VerticalAlignment="Top">
            <Label Content="Red"/>
            <Label Content="Faded Red"/>
            <Label Content="Blue"/>
