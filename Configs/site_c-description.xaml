        </ComboBox>
        <Label Content="NEXT STAGE" HorizontalAlignment="Left" Margin="99,499,0,0" VerticalAlignment="Top" FontFamily="{StaticResource Purista}" Foreground="White" FontSize="18" FontWeight="Normal"/>
        <Image x:Name="DefaultStatus" HorizontalAlignment="Left" Height="4" Margin="312,67,0,0" VerticalAlignment="Top" Width="135" Source="/Configs/Misc Panels 3@4x.png" Stretch="Fill" Opacity="0.45" Visibility="Collapsed"/>
        <Image x:Name="SimpleStatus" HorizontalAlignment="Left" Height="4" Margin="456,67,0,0" VerticalAlignment="Top" Width="135" Source="/Configs/Misc Panels 3@4x.png" Stretch="Fill" Opacity="0.45" Visibility="Collapsed"/>
        <Image HorizontalAlignment="Left" Height="4" Margin="600,67,0,0" VerticalAlignment="Top" Width="135" Source="/Configs/Misc Panels 3@4x.png" Stretch="Fill" Opacity="0.45" Visibility="Collapsed"/>


    </Grid>
</Page>
